{
  "name": "spite-compiler",
  "version": "0.1.0",
  "description": "SpiteStack compiler - TypeScript domain logic to TypeScript + Bun code generator",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts"
  },
  "bin": {
    "spite-debug-parse": "./bin/debug-parse.ts"
  },
  "scripts": {
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "bun-types": "latest",
    "@types/node": "^20.0.0"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  }
}
